<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/language_item_flag_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/flag_content_description"
        android:src="@drawable/ro"
        />

    <TextView
        android:id="@+id/language_item_language_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        />


    <Button
        android:id="@+id/language_item_resume_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resume_learning"
        android:contentDescription="@string/resume_learning"
        android:layout_gravity="center_vertical|end"
        style="@style/Widget.AppCompat.Button.Colored"
        />


</LinearLayout>